<% layout('layout') %>


  <div>
  <table>
    <tr>
      <th>Draft Slot</th><th>Drafter Name</th><th>Drafter Join Link</th>
      <th colspan="2">Invitation</th>
    </tr>
  </thead>
  <tbody>
  <% for (var j = 0; j < drafters.length; ++j) { %>
  <%   var drafter = drafters[j]; %>
    <tr>
      <td><%= drafter.slot %></td>
      <td><%= drafter.name %></td>
      <td><a href="/join/<%= drafter.joinId %>"><%= drafter.joinId %></a></td>
      <td>
        <form action="/admin/invite" method="post">
          <input type="email" value="<%= drafter.email || '' %>" placeholder="Enter an invitation email here" name="email" />
          <input type="hidden" name="joinId" value="<%= drafter.joinId %>" />
          <input type="submit" value="Send Invitation" />
        </form>
      </td>
    </tr>
  <% } %>
  </tbody>
  </table>

  <form action="/admin" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" />
    <label for="slot">Slot:</label>
    <input type="number" id="slot" name="slot" min="1" max="12" />
    <input type="submit" value="Add Drafter" />
  </form>

  </div>
